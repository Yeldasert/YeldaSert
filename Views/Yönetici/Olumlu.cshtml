
@{
    ViewBag.Title = "Olumlu";
    Layout = "~/Views/Shared/_LayoutYönetici.cshtml";
}

<h2>Olumlu</h2>

@foreach (var evrak in ViewBag.evraklar)
{
    using (Html.BeginForm("Olumlu", "Yönetici", FormMethod.Post))
    {
        <div class="card">
            <div class="card-header">
                <input type="hidden" id="evrakId" name="evrakId" value="@evrak.evrakId" />
                @evrak.evrakAd
            </div>
            <div class="card-body">
                <a href="@evrak.evrakYol">Belgeyi İncele</a>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-outline-danger" name="btnOlumsuz">Red Edildi</button>
                <button type="submit" class="btn btn-outline-success" name="btnOlumlu">Başarılı</button>

            </div>
            <p>
                @Html.Action("Index", "Detay")
                @Html.Action("Olumlu", "Yönetici")
                
            </p>
        </div>

    }

}

