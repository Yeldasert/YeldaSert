@model IEnumerable<YeldaSert.DAO.Evrak>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutYönetici.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.evrakAd)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.evrakTarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.evrakDurum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.evrakAd)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.evrakTarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.evrakDurum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Ad)
        </td>
        <td>        
            @Html.ActionLink("Detay", "Details", new { id = item.Id },new { @class="btn btn-warning"}) 

        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Cıkıs Yap","CıkısYap","Yönetici",new { @class="btn btn-danger"})
</p>
